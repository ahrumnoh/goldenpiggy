    </form>

    <br>  --}}


    <button type="submit" class="btn" id="uploadbtn">Create</button>

  </form>

</section>



{{#if posts.length}}
<section>
  <h2>My Previous Posts Management</h2>

  <ol>
    {{#each posts as |post|}}

    <li>
      {{> post-info post}}
      <button type="submit" class="btn" ><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a></button>
    </li>

    {{/each}}
  </ol>
  
</section>
{{/if}}

